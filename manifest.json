{
  "manifest_version": 3,
  "name": "Twitter AI Reply Assistant",
  "version": "3.0",
  "description": "AI-powered Twitter reply assistant with free and paid AI options",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*",
    "https://api.deepseek.com/*",
    "https://api.groq.com/*",
    "https://api.together.xyz/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*", 
        "https://x.com/*",
        "https://x.com/compose/post*",
        "https://twitter.com/compose/tweet*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Twitter AI Reply Assistant"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png", 
    "128": "icon128.png"
  }
} 